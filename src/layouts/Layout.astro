---
import Footer from '../components/Footer.astro';
import Header from '../components/Header.astro';
import '@fontsource-variable/rubik';


interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name = "viewport" content = "width=device-width; initial-scale = 1; maximum-scale=1; user-scalable = no;" />
		<link rel="icon" type="image/svg+xml" href="/favicon.ico" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="relative text-black dark:text-white" >
		<div class="absolute top-0 z-[-2] h-full w-full lg:w-full bg-neutral-950 bg-[radial-gradient(ellipse_80%_80%_at_50%_-20%,rgba(120,119,198,0.3),rgba(255,255,255,0))]"></div>
		<Header></Header>
		<slot />
		<Footer></Footer>
	</body>

</html>
<style is:global>
	:root {
		color-scheme: light dark;
	}
	html {
		font-family: 'Rubik Variable', sans-serif;
		overflow-x: hidden;
		scroll-behavior: smooth;
		
	}
	body {
		display: flex;
		flex-direction: column;
		justify-content: center;
		min-height: 100vh;
		margin: 0;
	}
</style>