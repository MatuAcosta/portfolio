---
import TecnologiesBadge from "./TecnologiesBadge.astro";
const { project } = Astro.props;

---

<section class="flex flex-row gap-x-8 w-full py-8">
    <section class="flex flex-col gap-y-4">
        <img class="w-[540px] h-96 border-2 border-emerald-400 hover:scale-105 duration-500" src={project.src}>
        <section class="flex flex-row gap-x-4 justify-center">
            <a  class="hover:scale-95  w-28 py-2 text-white border-2 border-slate-400 rounded-lg text-center" style={ project.github === '' ? 'display:none' : ''} target="_blank" href={project.github}>
                View Code
            </a>
            <a id="url" class="hover:scale-95  w-28 py-2 text-white border-2 border-slate-400 rounded-lg text-center" target="_blank" href={project.url}> Visit </a>
        </section>
    </section>
    <section class="flex flex-col gap-y-3 items-center w-1/2">
        <h2 class="font-bold text-3xl" class:list={project.colortitleStyle}>
            {project.name}
        </h2>
        <h2 class="text-lg text-white">
            {project.description}
        </h2>
        <section class="flex flex-row gap-x-6">
            {
                project.tecnologies.map((tech: any) => (
                    <TecnologiesBadge tech={tech}/>
                ))
            }
        </section>
    </section>
</section>
