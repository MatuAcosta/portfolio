---
const { tech } = Astro.props;
---

<div class="bg-gradient-to-r from-slate-300 to-slate-500 p-1 border-1 rounded-lg 
hover:scale-105  duration-300">
    <div class="flex flex-row gap-x-1 p-2 justify-center bg-gray-800 hover:opacity-90">
        <img src={tech.icon} alt={tech.name} class="w-4 h-4" />
        <span class="text-sm font-bold text-center text-white ml-2">{tech.name}</span>
    </div>
</div>